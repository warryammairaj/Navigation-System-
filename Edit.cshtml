@model Navigation_System.Models.NavigationItem

<h2>Edit Navigation Item</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ParentId">Parent</label>
        <select asp-for="ParentId" class="form-control" asp-items="@(new SelectList(ViewBag.Parents, "Id", "Title"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Url"></label>
        <input asp-for="Url" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
