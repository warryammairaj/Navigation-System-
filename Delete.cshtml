@{
}
@model Navigation_System.Models.NavigationItem

<h2>Delete Navigation Item</h2>

<dl class="row">
    <dt class="col-sm-2">
        Title
    </dt>
    <dd class="col-sm-10">
        @Model.Title
    </dd>
    <dt class="col-sm-2">
        Parent
    </dt>
    <dd class="col-sm-10">
        @Model.Parent?.Title
    </dd>
    <dt class="col-sm-2">
        URL
    </dt>
    <dd class="col-sm-10">
        @Model.Url
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>